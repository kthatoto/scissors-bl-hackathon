<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <%= image_tag "logo.png", class: "image" %>
      <div class="content">パスワードをリセット</div>
    </h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "ui large form" }) do |f| %>

      <%= devise_error_messages! %>

      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Eメール" %>
          </div>
        </div>

        <div class="ui fluid large teal submit button actions">パスワードリセットメールを送信</div>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
