
<div class="ui page grid" style="margin-top: 1em;">
  <div class="ui page grid">
    <div class="row">
      <div class="example">

        <%= form_with model: @user, local: true, class: "ui form" do |f| %>
          <%= f.hidden_field :page, value: @page %>
          <div class="field">
            <label>名前</label>
            <%= f.text_field :name, placeholder: "はさみ 太郎" %>
          </div>
          <div class="field">
            <label>性別</label>
            <%= f.select :gender, [["男性", 0], ["女性", 1]], {}, {class: "ui dropdown"} %>
          </div>
          <div class="field">
            <label>地域</label>
            <%= f.text_field :region, placeholder: "東京都" %>
          </div>

          <%= f.submit "設定", class: "ui button primary" %>
        <% end %>

      </div>
    </div>
  </div>
</div>
