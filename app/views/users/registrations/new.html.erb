<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <%= image_tag "logo.png", class: "image" %>
      <div class="content">Scissorsに登録</div>
    </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "ui large form"}) do |f| %>

      <%= devise_error_messages! %>

      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Eメール" %>
        </div>
      </div>

        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード(#{@minimum_password_length}文字以上)" %>
          </div>
        </div>

        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワード確認" %>
          </div>
        </div>

        <%= f.submit "登録", class: "ui fluid large teal submit button actions" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
